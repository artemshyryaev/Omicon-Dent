@model OmiconShop.Application.Admin.ViewModel.OrdersViewModel
@using OmiconShop.WebUI.HtmlHelpers

@{
    ViewBag.Title = "OrdersList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body>
    <div>
        @using (Html.BeginForm("OrderList", "Admin"))
        {
            @Html.EnumDropdownListFor(x => x.SelectedStatus, Model.SelectedStatus)
            <input type="submit" value="Ok">
        }
    </div>
    <div>
        <form class="form-inline my-2 my-lg-0">
            Find by Id: @Html.TextBox("OrderId")
            <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search">
        </form>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Order list</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th>Order no.</th>
                    <th class="text-right">Order date</th>
                    <th class="text-right">Bill-to name</th>
                    <th class="text-right">Total</th>
                    <th class="text-center">Order Satus</th>
                    <th></th>
                </tr>
                @foreach (var el in Model.Orders)
                {
                    <tr>
                        <td>@el.Id</td>
                        <td class="text-right">@el.OrderInformation.Date</td>
                        <td class="text-right">@(el.User.UserPersonalInformation.Name + " " + el.User.UserPersonalInformation.Surname)</td>
                        <td class="text-right">@el.OrderInformation.Total</td>
                        <td class="text-right">@el.Status</td>
                        <td class="text-right">@Html.RouteLink("View details", new { controller = "Admin", action = "OrderDetails", orderId = el.Id })</td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel-footer">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("ProductList", new { page = x }))
        </div>
    </div>
</body>
