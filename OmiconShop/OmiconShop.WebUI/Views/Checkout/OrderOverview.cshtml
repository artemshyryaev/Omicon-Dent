@model OmiconShop.Application.Basket.ViewModel.BasketViewModel

@{
    ViewBag.Title = "OrderOverview";
}

<div>
    <table>
        <thead>
            <tr>
                <td>Product</td>
                <td>Price</td>
                <td>Qty</td>
                <td>Total</td>
        </thead>
        <tbody>
            @foreach (var el in Model.Lines)
            {
                <tr>
                    <td>@el.Product.Name</td>
                    <td>@((double)el.Product.Price)</td>
                    <td>@el.Quantity</td>
                    <td>@(el.Quantity * (double)el.Product.Price) $</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">Total: @Model.BasketTotal $</td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="decline-order">
    @Html.RouteLink("Decline order", new { controller = "Checkout", action = "DeclineOrder", orderId = ViewBag.OrderId },
        new { @class = "badge badge-light decline-order__decline" })
</div>

<div class="submit-order">
    @Html.RouteLink("Submit order", new { controller = "Checkout", action = "SubmitOrder", orderId = ViewBag.OrderId },
        new { @class = "badge badge-light submit-order__submit" })
</div>

