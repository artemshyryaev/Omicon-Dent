@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/wwwroot/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sitejs")
</head>
<body>
    <header>
        @Html.Partial("_NavBar", new OmiconShop.Application.Account.ViewModel.LoginViewModel())
    </header>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="admin-nav-menu">
            @Html.RouteLink("Personal information", new { controller = "Admin", action = "PersonalInfo" },
                 new { @class = "badge badge-light admin-nav-menu__personal-info" })
            @Html.RouteLink("My orders", new { controller = "Admin", action = "OrderList" },
                 new { @class = "badge badge-light admin-nav-menu__order-list" })

            @if (User.Identity.Name == "admin@gmail.com")
            {
                @Html.RouteLink("Manage products", new { controller = "Admin", action = "ProductList" },
                    new { @class = "badge badge-light admin-nav-menu__product-list" })
            }
        </div>
    }

    <div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>

    <footer>
        @Html.Partial("_Footer")
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
