@model Startersite.Models.ViewModel.ProductViewModel
@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Product editing</h3>
    </div>
</div>

@using (Html.BeginForm("EditProduct", "Admin"))
{
    <div class="panel-body">
        @Html.HiddenFor(x => x.Id)
        @foreach (var prop in ViewData.ModelMetadata.Properties)
        {
            if (prop.PropertyName != "Id")
            {
                <div class="form-group">
                    @Html.Label(prop.DisplayName ?? prop.PropertyName)
                    @if (prop.PropertyName == "Description")
                    {
                        @Html.TextArea(prop.PropertyName, null, new { @class = "form-control", rows = 5 })
                    }
                    else
                    {
                        @Html.TextBox(prop.PropertyName, null, new { @class = "form-control" })
                    }
                    @Html.ValidationMessage(prop.PropertyName)
                </div>
            }
        }
    </div>
    <div class="panel-footer">
        <input type="submit" value="Save" class="btn btn-primary">
        @Html.RouteLink("Discard changes and go to list", new { controller = "Admin", action = "ProductList" }, new { @class = "btn btn-default" })
    </div>
}

